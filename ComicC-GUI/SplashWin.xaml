<Window x:Class="ComicC.SplashWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComicC"
        mc:Ignorable="d"
        Title="SplashWin"
        Background="Red"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" Width="700" Height="420"
        Loaded="Window_Loaded"
        ShowInTaskbar="False"
        AllowsTransparency="True">
    <Grid>
        <Image Source="splash" VerticalAlignment="Top" />
        <ProgressBar Name="pb" VerticalAlignment="Bottom" Height="20" Maximum="100" />
    </Grid>
</Window>
